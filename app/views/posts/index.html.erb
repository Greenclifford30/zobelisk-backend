<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Timestamp</th>
      <th>Likes</th>
      <th>Title</th>
      <th>Event date</th>
      <th>Body text</th>
      <th>Media</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.email %></td>
        <td><%= post.timestamp %></td>
        <td><%= post.likes %></td>
        <td><%= post.title %></td>
        <td><%= post.event_date %></td>
        <td><%= post.body_text %></td>
        <td><%= post.media %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
